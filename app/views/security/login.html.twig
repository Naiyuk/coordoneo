{% extends 'base.html.twig' %}
{% block title %} {{ parent() }} Login{% endblock %}
{% import 'macros/_form_elements.html.twig' as formElements %}

{% block body %}
    <section id="mainSection">
        <div class="container h-100">
            <div class="row h-100">
            <div class="col-lg-6 m-auto">
                <form action="" method="post" class="mx-auto py-2 px-5" id="loginForm">
                    <h1 class="text-center text-dark mb-5 font-weight-bold mt-4">Login</h1>
                    {% if error is not empty %}
                        <div class="alert alert-danger text-center" role="alert">
                            {{ error }}
                        </div>
                    {% endif %}
                    <div class="form-group">
                        <label class="control-label text-dark" for="email">Email</label>
                        <input type="text" class="form-control" name="email" id="email" />
                    </div>
                    <div class="form-group">
                        <label class="control-label text-dark" for="password">Mot de passe</label>
                        <input type="password" class="form-control" name="password" id="password" />
                    </div>
                    <div class="d-flex flex-column align-items-center">
                        {{ formElements.recaptcha('g-recaptcha mt-1') }}
                        <button id="loginFormBtn" type="submit" class="btn btn-primary my-3">Envoyer</button>
                    </div>
                    <input type="hidden" class="form-control" name="token" id="token" value="{{ token }}" />            
                </form>
            </div>
        </div>
    </div>
    </section>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://www.google.com/recaptcha/api.js" async defer></script>
    <script src="/js/login.js"></script>
{% endblock %}